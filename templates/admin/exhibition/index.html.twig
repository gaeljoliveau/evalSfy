{% extends 'admin/admin.html.twig' %}

{% block content %}

    <div class="container" style="margin-top: 100px; ">

        <h1>Formulaire d'ajout d'exposition</h1>
        {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}
        <p>
            {{ form_label(form.name, 'Nom: ') }}
            {{ form_widget(form.name, { attr: { placeholder: 'Saisissez le nom de l\'exposition' } }) }}
        </p>
        <p>
            {{ form_label(form.place, 'Lieu: ') }}
            {{ form_widget(form.place) }}
        </p>
        <p>
            {{ form_label(form.description, 'Description: ') }}
            {{ form_widget(form.description) }}
        </p>
        <p>
            {{ form_label(form.date, 'Date: ') }}
            {{ form_widget(form.date) }}
        </p>
        <p>
            <input type="submit" value="Valider" class="btn btn-dark">
        </p>
        {{ form_end(form) }}
    </div>
{% endblock %}
